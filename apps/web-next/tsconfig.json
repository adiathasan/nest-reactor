{
	"extends": "tsconfig/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"paths": {
			"@components/*": ["./app/components/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "dist/types/**/*.ts"],
	"exclude": ["node_modules"]
}
